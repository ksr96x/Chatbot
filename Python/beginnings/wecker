from datetime import datetime
import time
from tkinter import *
import tkinter as tk


entry = tk.Entry()
entry.pack()



class AlarmClock(tk.Tk):
    def __init__(self):
        super().__init__()
    
    input_description = tk.Label(text="Uhrzeit HH:MM")
    input_description.pack()
    
    time_d = datetime.now().time()
    time_description = tk.Label(text=time_d)
    time_description.pack()

    def alarm():
        # Frage den Benutzer nach der gewünschten Weckzeit
        alarm_input = entry.get()

        alarm_time = datetime.strptime(alarm_input, "%H:%M").time()
        print(alarm_time)

        while True:
            # Hole die aktuelle Uhrzeit
            current_time = datetime.now().time()
            print(current_time)
            # Vergleiche die aktuelle Uhrzeit mit der gewünschten Weckzeit
            if current_time.hour == alarm_time.hour and current_time.minute == alarm_time.minute:
                print("WAKE UP!")
                break
            time.sleep(1)

    def stop():
        print("Stopped!")

    Button(text="Submit", command=alarm).pack()
    Button(text="Stop", command=stop).pack()
    
clock = AlarmClock()

def main():
    clock.mainloop()
    clock.alarm()


main()